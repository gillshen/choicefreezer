/* Write your global styles here, in PostCSS syntax */
html,
body {
	@apply h-full;
}
body {
	@apply flex flex-col;
}
main {
	@apply flex-grow;
}
nav a:hover {
	@apply text-primary-600;
}

button {
	cursor: default;
}

article.main *.my-container {
	@apply w-full max-w-5xl mx-auto;
}
article.main h1 {
	@apply pt-8 pb-6;
}
