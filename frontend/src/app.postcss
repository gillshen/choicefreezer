/* Global styles */
::-webkit-scrollbar-corner {
	@apply bg-surface-900;
}

html,
body {
	@apply h-full;
}
body {
	@apply flex flex-col;
}
main {
	@apply flex-grow;
}
nav a:hover,
.nav-link:hover {
	@apply text-primary-600;
}
nav .divider {
	@apply bg-surface-500;
}

footer > div {
	@apply px-4 pt-6 pb-8;
}
article.main *.page-container {
	@apply w-full max-w-5xl mx-auto p-4 pb-12;
}
article.main > section {
	@apply py-4;
}
article.main > section:nth-child(odd) {
	@apply bg-surface-800;
}

h1 {
	@apply h1;
	@apply w-full max-w-5xl mx-auto p-4 pt-12;
	@apply font-bold;
}
h2 {
	@apply h2;
	@apply pt-4 pb-8;
	font-size: 22pt;
}
h3 {
	@apply h3;
	@apply pt-4;
}

p + p {
	@apply mt-4;
}
p.section-placeholder {
	@apply text-surface-300;
}

dialog {
	@apply rounded-xl;
	box-shadow: 18px 18px 36px rgb(25, 25, 25), -18px -18px 36px rgb(55, 55, 55);
	border: none;
}

.cf-card-shadow {
	box-shadow: 6px 6px 12px #222222, -6px -6px 12px #383838;
}
.cf-card-shadow-hover:hover {
	box-shadow: 9px 9px 18px #222222, -9px -9px 18px #383838;
}

/* on surface-800 */
.cf-card-shadow-2 {
	box-shadow: 6px 6px 12px #2a2a2a, -6px -6px 12px #444444;
}
.cf-card-shadow-2-hover:hover {
	box-shadow: 9px 9px 18px #2a2a2a, -9px -9px 18px #444444;
}
/* concave */
.cf-card-shadow-concave {
	box-shadow: inset 5px 5px 10px #222222, inset -5px -5px 10px #383838;
}

button {
	cursor: default;
}
button.cf-primary,
button.cf-dangerous-primary,
button.cf-secondary,
button.section-cta,
button.grid-page-export {
	@apply btn;
	@apply min-w-[8rem] m-0;
	@apply rounded-md;
	@apply font-normal;
	@apply flex gap-2;
}
button.cf-primary,
button.cf-dangerous-primary,
button.section-cta,
button.grid-page-export {
	@apply variant-filled-primary;
	@apply hover:scale-[101%] duration-300;
	box-shadow: 6px 6px 24px rgb(25, 25, 25), -6px -6px 20px rgb(55, 55, 55);
}
button.cf-primary:hover,
button.cf-dangerous-primary:hover,
button.section-cta:hover,
button.grid-page-export:hover {
	box-shadow: 8px 8px 24px rgb(25, 25, 25), -8px -8px 20px rgb(55, 55, 55);
}
button.section-cta {
	@apply mt-8;
}
button.section-cta.delete {
	@apply bg-surface-800 text-surface-300;
	@apply hover:bg-red-400 hover:text-black;
	box-shadow: 0 0 0;
}
button.cf-dangerous-primary {
	@apply !bg-red-400 !text-black;
}
button.icon-button {
	@apply w-[30px] h-[30px] rounded-full;
	@apply flex justify-center items-center;
	@apply text-sm;
	@apply hover:bg-surface-700;
}
button.icon-button.delete {
	@apply hover:bg-red-400 hover:text-black;
}

/* Form */
form {
	@apply flex flex-col;
}
fieldset {
	@apply flex flex-col gap-4;
}
fieldset:not(:first-child) {
	@apply mt-12;
}
fieldset > legend {
	@apply h3 py-4 pr-4;
}
fieldset > legend.empty {
	@apply px-0 py-2 my-0;
}
label:not(.radio-items-container > label) {
	@apply pb-2 pt-2;
}
label .optional {
	@apply text-tertiary-500;
}
input.input,
input.date,
input.time,
select.select {
	@apply w-[20rem] h-10 px-2;
	@apply rounded-md;
}
input.input.wider,
select.select.wider {
	@apply w-[28rem];
}
textarea.input {
	@apply min-h-[3rem];
}
input.radio {
	@apply rounded-full;
}
form div.form-actions {
	@apply mt-12;
}
form small.char-count {
	@apply my-1 text-tertiary-500 text-sm;
}
form small.error-message,
form small.success-message {
	@apply text-sm;
}
form small.error-message {
	@apply text-rose-400;
}
form small.success-message {
	@apply text-lime-400;
}

/* navigation */
.dropdown-nav ul {
	@apply h-fit;
	/* Shared grid properties; other grid properties
	 * are defined in individual components */
	@apply gap-y-2 gap-x-6;
}
.dropdown-nav li {
	@apply text-left w-fit min-w-[5rem];
}

/* student card hovering effect */
.student-cards-container .card:hover {
	transform: scale(1.05);
	transition: all 0.15s ease;
}

/* profile grid */
.profile-grid {
	@apply grid gap-x-8 gap-y-4 auto-rows-min;
	@apply rounded-xl;
	grid-template-columns: max-content 1fr;
}
.cf-key,
.profile-grid .cf-key {
	@apply text-tertiary-500;
}
.profile-grid .cf-value {
	@apply flex flex-wrap gap-3 w-full;
}
.profile-grid .cf-value button {
	opacity: 0;
	transition: opacity 0.4s;
	@apply text-sm text-primary-600 bg-surface-700;
	@apply px-3;
	@apply rounded-md;
}
.profile-grid .cf-value:hover button {
	opacity: 1;
}
.profile-grid .cf-value:hover button:hover {
	@apply text-surface-900 bg-primary-500;
}
.profile-grid a:hover {
	@apply text-secondary-400;
}

/* contract types */
.bg-ug-freshman {
	@apply bg-yellow-400;
}
/* .border-ug-freshman {
	@apply border-b-yellow-400;
} */
.bg-ug-transfer {
	@apply bg-rose-400;
}
/* .border-ug-transfer {
	@apply border-b-rose-400;
} */
.bg-graduate {
	@apply bg-blue-400;
}
/* .border-graduate {
	@apply border-b-blue-400;
} */

/* status chips */
.contract-status-chip,
.app-status-chip {
	@apply px-4 py-1;
	@apply min-w-[8rem] max-w-fit;
	@apply rounded-full;
	@apply text-base text-center font-normal;
	@apply text-surface-900;
	@apply bg-surface-50;
}

/* contract status chip */
.contract-status-chip.bg-effective {
	@apply text-surface-900;
	@apply bg-lime-300;
}
.contract-status-chip.bg-fulfilled {
	@apply text-surface-50;
	@apply bg-zinc-700;
}
.contract-status-chip.bg-terminated {
	@apply text-surface-50;
	@apply bg-error-900;
}

/* application status chip & dot */
.app-status-dot {
	@apply w-4 min-w-[1rem] h-4 min-h-[1rem] rounded-full;
	@apply bg-surface-50;
}
.app-status-dot-text {
	@apply overflow-hidden text-ellipsis;
}
.app-status-dot.started,
.app-status-dot.deferred,
.app-status-chip.started,
.app-status-chip.deferred {
	@apply bg-orange-400;
}
.app-status-dot.submitted,
.app-status-dot.under-review,
.app-status-chip.submitted,
.app-status-chip.under-review {
	@apply bg-sky-400;
}
.app-status-dot.ready-to-submit,
.app-status-chip.ready-to-submit {
	@apply bg-yellow-300;
}
.app-status-dot.admitted,
.app-status-dot.enrolled,
.app-status-dot.offer-declined,
.app-status-chip.admitted,
.app-status-chip.enrolled,
.app-status-chip.offer-declined {
	@apply bg-primary-500;
}
.app-status-dot.on-waitlist,
.app-status-chip.on-waitlist {
	@apply bg-purple-400;
}
.app-status-dot.rejected,
.app-status-dot.late,
.app-status-dot.disqualified,
.app-status-chip.rejected,
.app-status-chip.late,
.app-status-chip.disqualified {
	@apply bg-red-400;
}
.app-status-dot.withdrawn,
.app-status-dot.canceled,
.app-status-dot.application-closed,
.app-status-chip.withdrawn,
.app-status-chip.canceled,
.app-status-chip.application-closed {
	@apply bg-zinc-600;
	@apply text-surface-50;
}

/* Data grid styles */
.data-grid {
	@apply w-full h-full overflow-scroll;
	/* Border works well for Firefox, but will reveal the ugly scrollbar shift 
	 * of Chrome and Edge */
	/* @apply border border-surface-700 rounded-xl; */
}
.data-grid a {
	@apply text-indigo-200 hover:text-primary-500;
}

.grid-page-container,
.grid-page-sidebar,
.grid-page-content {
	display: flex;
}
.grid-page-container {
	align-items: stretch;
}
.grid-page-sidebar,
.grid-page-content {
	/* 72px is the height of the topbar */
	height: calc(100vh - 72px);
	max-height: calc(100vh - 72px);
}
.grid-page-sidebar {
	@apply w-[20rem] min-w-[20rem] max-w-[20rem];
	/* background-color: #1d1d1d; */
}
.grid-page-sidebar-content {
	@apply mx-6 my-0;
	@apply px-6 py-8;
	@apply w-full overflow-auto;
	@apply rounded-xl;
}
.grid-page-content {
	@apply flex-col flex-grow gap-6;
	@apply pl-12 pr-12 pt-8 pb-6;
}
h1.grid-page-title {
	@apply p-0 m-0;
	@apply max-w-none;
	font-size: 28pt;
}

