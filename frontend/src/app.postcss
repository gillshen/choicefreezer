.ag-header-cell:hover .ag-icon {
	@apply text-surface-50;
}
.ag-header-cell:hover .ag-icon:hover {
	@apply text-primary-500;
}
.ag-picker-field-wrapper {
	border-radius: 4px;
	@apply !bg-surface-700;
	@apply p-1;
}
.ag-input-field-input {
	@apply !bg-surface-700;
}
.ag-text-field-input {
	@apply p-2;
}
/* floating filters */
.ag-header-cell.ag-floating-filter {
	@apply bg-surface-800 text-surface-50;
}
.ag-floating-filter .ag-input-field-input {
	@apply bg-surface-700;
	@apply font-normal;
}
.ag-header-cell.ag-floating-filter:hover {
	@apply !bg-surface-800;
}
.ag-header-cell-filtered {
	@apply text-amber-400;
}

/* Rounded corners for the headers */
.ag-header {
	@apply rounded-md;
}

/* Override the default 0.5 */
.ag-checkbox-input-wrapper.ag-disabled {
	opacity: 0.8 !important;
}

/* Snack bar */
.toast {
	@apply invisible;
	@apply fixed z-10;
	@apply left-1/2 bottom-8;
	@apply bg-surface-700 text-surface-50;
	@apply rounded-md;
	@apply py-4 px-12;
	@apply flex gap-2 justify-center items-center;
	@apply min-w-[16rem] -ml-[8rem];
}

.toast.show {
	@apply visible;
	/* Take 0.5s to fade in and out; delay the fade out by 2s */
	-webkit-animation: fadein 0.5s, fadeout 0.5s 2s;
	animation: fadein 0.5s, fadeout 0.5s 2s;
}

/* Animations to fade in and out */
@-webkit-keyframes fadein {
	from {
		bottom: 0;
		opacity: 0;
	}
	to {
		bottom: 32px;
		opacity: 1;
	}
}

@keyframes fadein {
	from {
		bottom: 0;
		opacity: 0;
	}
	to {
		bottom: 32px;
		opacity: 1;
	}
}

@-webkit-keyframes fadeout {
	from {
		bottom: 32px;
		opacity: 1;
	}
	to {
		bottom: 0;
		opacity: 0;
	}
}

@keyframes fadeout {
	from {
		bottom: 32px;
		opacity: 1;
	}
	to {
		bottom: 0;
		opacity: 0;
	}
}

/* icon in the toast */
.toast.success i {
	@apply text-primary-500;
}
.toast.error i {
	@apply text-red-400;
}
